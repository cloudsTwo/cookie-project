<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasoft.mapper.LikeMapper">

	<select id="findLike" parameterType="java.lang.Integer"
		resultType="com.chinasoft.pojo.Like">
		select * from `like` where uid=#{uid} and mid=#{mid}
	</select>
	
	
	<insert id="addLike" 
		parameterType="com.chinasoft.pojo.Like" >
		insert into `like` (uid,mid,time) 
		values (#{uid},#{mid},#{time})
	</insert>

	<delete id="deleteLike"  parameterType="java.lang.Integer">
			delete from `like` where mid=#{mid} and uid=#{uid}
     </delete>
	
</mapper>