<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasoft.mapper.ShopcartMapper">

	<select id="findShopcartById" parameterType="java.lang.Integer" resultType="com.chinasoft.pojo.Shopcart">
		select * from shopcart where sid=#{sid}
	</select>
	
	<select id="findShopcart" parameterType="java.lang.Integer" resultType="com.chinasoft.pojo.Shopcart">
		select * from shopcart where uid=#{uid} and mid=#{mid}
	</select>
	
	<select id="findShopcartByStatus" parameterType="java.lang.Integer" resultType="com.chinasoft.pojo.Shopcart">
		select * from shopcart where status=#{status}
	</select>
	
	<select id="findShopcartByUser" parameterType="java.lang.Integer" resultType="com.chinasoft.pojo.Shopcart">
		select * from shopcart where uid=#{uid}
	</select>
	
	<select id="findShopcartByMenu" parameterType="java.lang.Integer" resultType="com.chinasoft.pojo.Shopcart">
		select * from shopcart where mid=#{mid}
	</select>
	
	<insert id="addShopcart" useGeneratedKeys="true" keyProperty="sid"
		parameterType="com.chinasoft.pojo.Shopcart" >
		insert into shopcart (uid,mid,count,status,createTime,updateTime) 
		values (#{uid},#{mid},#{count},#{status},#{createTime},#{updateTime})
	</insert>
	
	<update id="changeShopcart" 
		parameterType="com.chinasoft.pojo.Shopcart">
			update shopcart set uid=#{uid},mid=#{mid},count=#{count},status=#{status},
			createTime=#{createTime},updateTime=#{updateTime} 
			where sid=#{sid}
	</update>
	
	<delete id="deleteShopcartById"  parameterType="java.lang.Integer">
			delete from shopcart where sid=#{sid}
     </delete>
     
     <delete id="deleteShopcartByUser" parameterType="java.lang.Integer">
		delete from shopcart where uid=#{uid}
	</delete>
	
</mapper>